<h1>Listing mailbuilders</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mailbuilders.each do |mailbuilder| %>
      <tr>
        <td><%= link_to 'Show', mailbuilder %></td>
        <td><%= link_to 'Edit', edit_mailbuilder_path(mailbuilder) %></td>
        <td><%= link_to 'Destroy', mailbuilder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mailbuilder', new_mailbuilder_path %>
